<script type="text/javascript">
function dr_get_code(cname, type) {
	var body = '<div style="padding:20px;font-size:14px">';
    if (type == 1) {
        body+= '{'+'dr_var("'+cname+'")'+'}';
    } else if (type == 0) {
        body+= '{'+'if dr_var("'+cname+'")'+'}';
        body+= '   <?php echo L("是"); ?>   ';
        body+= '{'+'else'+'}';
        body+= '   <?php echo L("否"); ?>   ';
        body+= '{'+'/if'+'}';
    }
    body+= '</div>';
	var throughBox = art.dialog.through;
	throughBox({
		content: body,
		title: "<?php echo L('调用方式'); ?>"
	});
}
</script>
